---
import NextJS from '../icons/NextJS.astro';
import Tailwind from '../icons/Tailwind.astro';
const TAGS = {
    NEXT_JS: {
        name: 'Next.js',
        class: 'bg-black text-white',
        icon: NextJS
    },
    TAILWIND: {
        name: 'Tailwind CSS',
        class: 'bg-[#003159] text-white',
        icon: Tailwind
    }
}

const PROJECTS = [
    {
        title: 'SVGL - A beautiful library with SVG logos',
        description: 'Created from scratch with Next.js, Tailwind CSS and React. SVGL is a library of SVG logos that can be used in your projects.',
        link: 'https://svgl.vercel.app/',
        github: 'https://github.com/pheralb/svgl',
        image: '/projects/svgl.webp',
        tags: [TAGS.NEXT_JS, TAGS.TAILWIND],

    }
]
---

{
    PROJECTS.map(({ title, description, tags, image}) => (
        <article>
            <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-2">
                {
                    tags.map((tag) => (
                        <li>
                            <span class={`${tag.class} flex gap-x-2 rounded-full text-xs py-1 px-2`}>
                                <tag.icon class="size-4"></tag.icon> 
                            {tag.name}
                            </span>
                        </li>
                    ))
                }
            </ul>
            <img class="rounded shadow-2xl shadow-white/10" src={image} alt={`Captura de pantalla del proyecto ${image}`} />
        </article>
    ))
}